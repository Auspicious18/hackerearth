#include <stdio.h>

int main()
{
	int t,i;
	scanf("%d",&t);
	for(i=0;i<t;i++)
	{
	    int g,q=0,r=0,p,n,j,s,k;
	    scanf("%d %d",&g,&p);
	    scanf("%d",&n);
	    int a[n],b[n];
	    if(i%2!=0)
	    {
	        k=g;
	        g=p;
	        p=k;
	    }
	    for(j=0;j<n;j++)
	    {
	        scanf("%d %d",&a[i],&b[i]);
	        q=q+a[i];
	        r=r+b[i];
	    }
	    s=(q*g)+(r*p);
	    printf("%d\n",s);
	}
}
